# Newsletter Program Environment Variables
# Copy this file to .env and fill in your actual values

# Encryption key for subscriber data (generate with: node ../.github/scripts/generate-encryption-key.js generate)
ENCRYPTION_KEY=your-base64-encryption-key-here

# Resend API configuration
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=newsletter@yourdomain.com
FROM_NAME=Your Newsletter

# Website configuration
WEBSITE_URL=https://yourwebsite.com
UNSUBSCRIBE_SECRET=your-unsubscribe-secret-here

# Discord notifications (optional)
DISCORD_WEBHOOK_URL=your-discord-webhook-url-here

# Development settings
NODE_ENV=development