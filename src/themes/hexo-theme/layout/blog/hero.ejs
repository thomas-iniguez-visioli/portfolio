<article class="article container <%= typeof classNames === 'string' ? classNames : '' %>" id="latest-writing" lang="<%= post.lang || config.language %>">
  <header>
    <div class="<%= ['cover', post.cover && post.cover.type].filter(d=>d).join(' ') %>">
      <% if (post.cover) { %><img src="<%= post.image %>" alt="" class="is-responsive is-cover"><% } %>
    </div>

    <h1><a href="<%= url_for(post.path) %>" rel="bookmark"><%= post.title %></a></h1>

    <ul class="metadata is-inline is-dotted">
      <li><time class="dt-published" datetime="<%= post.date.toISOString() %>">
        <%= date(post.date) %>
      </time></li>
      <li><%= readingTime(post.content).text %></li>
    </ul>
  </header>

  <section>
    <div class="summary"><%- post.description || post.excerpt %></div>

    <p class="read-more">
      <a href="<%= url_for(post.path) %>">
        <%- partial('icon', {id: 'bookmarks'}) -%><%= _p('read_more.article') %>
      </a>
    </p>
  </section>

  <aside class="next">
    <h2><%= _p('more.writings') %></h2>

    <ul class="is-discrete with-metadata">
      <% aside.forEach(post => { %>
      <li>
        <time class="metadata" datetime="<%= date_xml(post.date) %>"><%= date(post.date) %></time>
        <a href="<%= url_for(post.path) %>" rel="bookmark"><%= post.title %></a>
      </li>
      <% }) %>
    </ul>
  </aside>

  <aside class="next">
    <ul class="is-discrete">
      <li><a href="<%= url_for('/archives/') %>" class="read-more">
        <%- partial('icon', {id: 'browse'}) -%><%= __('more.archives') %>
      </a></li>
      <li><a href="<%= url_for('/categories/journal/') %>" class="read-more">
        <%- partial('icon', {id: 'coffee'}) -%><%= __('more.journal') %>
      </a></li>
      <li><a href="<%= url_for('/reading-notes/') %>" class="read-more">
        <%- partial('icon', {id: 'bookmarks'}) -%><%= __('more.reading_notes') %>
      </a></li>
      <li><a href="<%= url_for('/feed/') %>" type="application/rss+xml" class="read-more">
        <%- partial('icon', {id: 'rss'}) -%><%= __('more.feed') %>
      </a></li>
    </ul>
  </aside>
</article>
