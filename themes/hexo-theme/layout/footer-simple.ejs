<footer class="page-footer-simple" role="contentinfo">
  <div class="container">
    <!-- Back to Top Button -->
    <button class="footer-back-to-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Retour en haut de la page">
      <svg class="footer-back-to-top-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="18,15 12,9 6,15"></polyline>
      </svg>
    </button>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        © <%= new Date().getFullYear() %> <%= config.title %>. Tous droits réservés.
      </p>
      
      <nav aria-label="Legal navigation">
        <ul class="footer-legal">
          <li>
            <a href="<%= url_for('/privacy/') %>" class="footer-legal-link">
              Confidentialité
            </a>
          </li>
          <li>
            <a href="<%= url_for('/terms/') %>" class="footer-legal-link">
              Conditions
            </a>
          </li>
          <li>
            <a href="<%= url_for('/contact/') %>" class="footer-legal-link">
              Contact
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</footer>