<!-- Mobile Menu Toggle -->
<button class="dev-sidebar-toggle dev-mobile-toggle" 
        aria-label="Toggle navigation menu" 
        aria-expanded="false" 
        aria-controls="dev-sidebar"
        data-toggle="sidebar">
  <span class="dev-sidebar-toggle-icon dev-hamburger-icon">
    <span class="dev-hamburger-line"></span>
    <span class="dev-hamburger-line"></span>
    <span class="dev-hamburger-line"></span>
  </span>
  <span class="dev-toggle-label visually-hidden">Menu</span>
</button>

<aside id="dev-sidebar" 
       class="dev-sidebar developer-sidebar" 
       role="complementary" 
       aria-label="Developer sidebar"
       data-sidebar="developer"
       data-responsive="true">
  <div class="dev-sidebar-content developer-sidebar-content">
    <!-- Developer Profile Section -->
    <div class="dev-sidebar-section dev-profile developer-profile" data-section="profile">
      <div class="dev-profile-header developer-profile-header">
        <div class="dev-profile-avatar developer-avatar" data-status="online">
          <div class="dev-profile-status dev-status-indicator" 
               aria-label="Status: Online"
               data-status="online"></div>
          <span class="dev-profile-initial developer-initial"><%= config.title.charAt(0) %></span>
        </div>
        <div class="dev-profile-info developer-info">
          <h2 class="dev-profile-name developer-name">
            <a href="<%= url_for('/') %>" 
               class="dev-profile-link developer-link" 
               aria-label="<%= config.title %> - Home"
               data-nav="home">
              <%= config.title %>
            </a>
          </h2>
          <p class="dev-profile-title developer-title">Full-Stack Developer</p>
          <div class="dev-profile-location developer-location">
            <svg class="dev-icon location-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span class="location-text">Remote</span>
          </div>
        </div>
      </div>
      
      <p class="dev-profile-bio">
        <%- markdown(theme.description || 'Passionate about modern web technologies, clean code, and sharing knowledge through technical writing.') %>
      </p>

      <!-- Tech Stack Section -->
      <div class="dev-tech-stack developer-tech-stack" data-section="tech-stack">
        <h3 class="dev-section-title developer-section-title">
          <svg class="dev-icon tech-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="16 18 22 12 16 6"></polyline>
            <polyline points="8 6 2 12 8 18"></polyline>
          </svg>
          <span class="section-title-text">Tech Stack</span>
        </h3>
        <div class="dev-tech-badges developer-tech-badges" role="list" aria-label="Technologies">
          <span class="dev-tech-badge dev-tech-javascript tech-badge" 
                data-tech="JavaScript" 
                role="listitem" 
                title="JavaScript">JS</span>
          <span class="dev-tech-badge dev-tech-typescript tech-badge" 
                data-tech="TypeScript" 
                role="listitem" 
                title="TypeScript">TS</span>
          <span class="dev-tech-badge dev-tech-react tech-badge" 
                data-tech="React" 
                role="listitem" 
                title="React">React</span>
          <span class="dev-tech-badge dev-tech-node tech-badge" 
                data-tech="Node.js" 
                role="listitem" 
                title="Node.js">Node</span>
          <span class="dev-tech-badge dev-tech-python tech-badge" 
                data-tech="Python" 
                role="listitem" 
                title="Python">Python</span>
          <span class="dev-tech-badge dev-tech-git tech-badge" 
                data-tech="Git" 
                role="listitem" 
                title="Git">Git</span>
          <span class="dev-tech-badge dev-tech-docker tech-badge" 
                data-tech="Docker" 
                role="listitem" 
                title="Docker">Docker</span>
          <span class="dev-tech-badge dev-tech-vscode tech-badge" 
                data-tech="VS Code" 
                role="listitem" 
                title="VS Code">VSCode</span>
        </div>
      </div>

      <!-- Social Links -->
      <div class="dev-social-links">
        <% if (theme.graph && theme.graph.github) { %>
          <a href="<%= theme.graph.github %>" class="dev-social-link" aria-label="GitHub" target="_blank" rel="noopener noreferrer">
            <svg class="dev-social-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
          </a>
        <% } %>
        
        <% if (theme.graph && theme.graph.twitter) { %>
          <a href="https://twitter.com/<%= theme.graph.twitter %>" class="dev-social-link" aria-label="Twitter" target="_blank" rel="noopener noreferrer">
            <svg class="dev-social-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
            </svg>
          </a>
        <% } %>
        
        <% if (theme.graph && theme.graph.mastodon) { %>
          <a href="<%= theme.graph.mastodon %>" class="dev-social-link" aria-label="Mastodon" target="_blank" rel="noopener noreferrer me">
            <svg class="dev-social-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23.268 5.313c-.35-2.578-2.617-4.61-5.304-5.004C17.51.242 15.792 0 11.813 0h-.03c-3.98 0-4.835.242-5.288.309C3.882.692 1.496 2.518.917 5.127.64 6.412.61 7.837.661 9.143c.074 1.874.088 3.745.26 5.611.118 1.24.325 2.47.62 3.68.55 2.237 2.777 4.098 4.96 4.857 2.336.792 4.849.923 7.256.38.265-.061.527-.132.786-.213.585-.184 1.27-.39 1.774-.753a.057.057 0 0 0 .023-.043v-1.809a.052.052 0 0 0-.02-.041.053.053 0 0 0-.046-.01 20.282 20.282 0 0 1-4.709.545c-2.73 0-3.463-1.284-3.674-1.818a5.593 5.593 0 0 1-.319-1.433.053.053 0 0 1 .066-.054c1.517.363 3.072.546 4.632.546.376 0 .75 0 1.125-.01 1.57-.044 3.224-.124 4.768-.422.038-.008.077-.015.11-.024 2.435-.464 4.753-1.92 4.989-5.604.008-.145.03-1.52.03-1.67.002-.512.167-3.63-.024-5.545zm-3.748 9.195h-2.561V8.29c0-1.309-.55-1.976-1.67-1.976-1.23 0-1.846.79-1.846 2.35v3.403h-2.546V8.663c0-1.56-.617-2.35-1.848-2.35-1.112 0-1.668.668-1.67 1.977v6.218H4.822V8.102c0-1.31.337-2.35 1.011-3.12.696-.77 1.608-1.164 2.74-1.164 1.311 0 2.302.5 2.962 1.498l.638 1.06.638-1.06c.66-.999 1.65-1.498 2.96-1.498 1.13 0 2.043.395 2.74 1.164.675.77 1.012 1.81 1.012 3.12z" />
            </svg>
          </a>
        <% } %>
        
        <a href="<%= url_for('/feed/') %>" class="dev-social-link" aria-label="RSS Feed" type="application/rss+xml">
          <svg class="dev-social-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
      </div>
    </div>

    <!-- Developer Navigation -->
    <div class="dev-sidebar-section dev-navigation developer-navigation" data-section="navigation">
      <h3 class="dev-section-title developer-section-title">
        <svg class="dev-icon nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9,22 9,12 15,12 15,22"></polyline>
        </svg>
        <span class="section-title-text">Navigation</span>
      </h3>
      <nav class="dev-main-nav developer-main-nav" aria-label="Main navigation">
        <ul class="dev-nav-list developer-nav-list" role="list">
          <li class="dev-nav-item developer-nav-item" role="listitem">
            <a href="<%= url_for('/') %>" 
               class="dev-nav-link developer-nav-link" 
               data-nav="home"
               aria-current="<%= is_home() ? 'page' : 'false' %>">
              <svg class="dev-nav-icon nav-item-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9,22 9,12 15,12 15,22"></polyline>
              </svg>
              <span class="dev-nav-text nav-text">Home</span>
              <kbd class="dev-nav-shortcut nav-shortcut" aria-label="Keyboard shortcut">⌘H</kbd>
            </a>
          </li>
          <li class="dev-nav-item">
            <a href="<%= url_for('/about/') %>" class="dev-nav-link" data-nav="about">
              <svg class="dev-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span class="dev-nav-text">About</span>
              <kbd class="dev-nav-shortcut">⌘A</kbd>
            </a>
          </li>
          <li class="dev-nav-item">
            <a href="<%= url_for('/archives/') %>" class="dev-nav-link" data-nav="articles">
              <svg class="dev-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
              </svg>
              <span class="dev-nav-text">Articles</span>
              <kbd class="dev-nav-shortcut">⌘P</kbd>
            </a>
          </li>
          <li class="dev-nav-item">
            <a href="<%= url_for('/categories/journal/') %>" class="dev-nav-link" data-nav="journal">
              <svg class="dev-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
              </svg>
              <span class="dev-nav-text">Journal</span>
              <kbd class="dev-nav-shortcut">⌘J</kbd>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Developer Tools Section -->
    <div class="dev-sidebar-section dev-tools">
      <h3 class="dev-section-title">
        <svg class="dev-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
        </svg>
        Tools
      </h3>
      <nav aria-label="Developer tools">
        <ul class="dev-nav-list">
          <li class="dev-nav-item">
            <a href="<%= url_for('/status/') %>" class="dev-nav-link" data-nav="status">
              <svg class="dev-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
              <span class="dev-nav-text">Status</span>
              <div class="dev-status-indicator dev-status-online"></div>
            </a>
          </li>
          <li class="dev-nav-item">
            <a href="https://feed-blush.vercel.app/" class="dev-nav-link" data-nav="feed" target="_blank" rel="noopener noreferrer">
              <svg class="dev-nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 11a9 9 0 0 1 9 9"></path>
                <path d="M4 4a16 16 0 0 1 16 16"></path>
                <circle cx="5" cy="19" r="1"></circle>
              </svg>
              <span class="dev-nav-text">Feed Reader</span>
              <svg class="dev-external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                <polyline points="15,3 21,3 21,9"></polyline>
                <line x1="10" y1="14" x2="21" y2="3"></line>
              </svg>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Newsletter Section -->
    <div class="dev-sidebar-section sidebar-section sidebar-newsletter developer-newsletter" data-section="newsletter">
      <h3 class="dev-section-title sidebar-section-title developer-section-title">
        <svg class="dev-icon sidebar-section-icon newsletter-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
        <span class="section-title-text">Newsletter</span>
      </h3>
      <p class="sidebar-description newsletter-description">
        Restez informé des derniers articles et actualités. Recevez les nouveautés directement dans votre boîte mail.
      </p>
      
      <form class="newsletter-form" id="newsletter-form" aria-label="Inscription à la newsletter" novalidate>
        <div class="newsletter-input-group">
          <label for="newsletter-email" class="newsletter-label visually-hidden">Adresse email</label>
          <input type="email" 
                 class="newsletter-input" 
                 id="newsletter-email"
                 name="email"
                 placeholder="votre@email.com" 
                 required 
                 aria-label="Adresse email pour la newsletter"
                 aria-describedby="newsletter-message"
                 autocomplete="email">
          <button type="submit" 
                  class="newsletter-button" 
                  id="newsletter-submit"
                  aria-label="S'abonner à la newsletter">
            <span class="newsletter-button-text" id="newsletter-button-text">
              <svg class="newsletter-button-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 2L11 13"></path>
                <polygon points="22,2 15,22 11,13 2,9"></polygon>
              </svg>
              S'abonner
            </span>
            <span class="newsletter-button-loading" id="newsletter-button-loading" style="display: none;">
              <svg class="newsletter-loading-spinner" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12a9 9 0 11-6.219-8.56"/>
              </svg>
              Envoi...
            </span>
          </button>
        </div>
        
        <div class="newsletter-message" 
             id="newsletter-message" 
             role="status" 
             aria-live="polite" 
             aria-atomic="true"
             style="display: none;">
        </div>
        
        <div class="newsletter-privacy">
          <small class="newsletter-privacy-text">
            En vous abonnant, vous acceptez de recevoir nos actualités. 
            Vos données sont protégées et ne seront jamais partagées.
          </small>
        </div>
      </form>
    </div>
  </div>
</aside>