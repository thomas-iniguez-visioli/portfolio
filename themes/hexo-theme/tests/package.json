{
  "name": "hexo-theme-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Cross-browser testing suite for hexo developer theme",
  "scripts": {
    "test": "npm run validate && npm run test:visual && npm run test:performance && npm run test:accessibility",
    "test:all": "node scripts/run-all-tests.js",
    "test:visual": "playwright test --config=playwright.config.js",
    "test:performance": "node scripts/performance-tests.js",
    "test:accessibility": "node scripts/accessibility-tests.js",
    "test:regression": "backstop test",
    "test:approve": "backstop approve",
    "test:reference": "backstop reference",
    "validate": "node scripts/validate-setup.js",
    "serve:test": "http-server ../../../ -p 8080 -c-1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/puppeteer": "^4.8.3",
    "backstopjs": "^6.2.2",
    "lighthouse": "^11.4.0",
    "chrome-launcher": "^1.0.0",
    "axe-core": "^4.8.3",
    "puppeteer": "^21.6.1",
    "http-server": "^14.1.1",
    "chalk": "^4.1.2"
  }
}