{
  "name": "hexo-theme-thom4",
  "version": "2.28.1",
  "private": true,
  "description": "Hexo theme for my portfolio and stuff.",
  "main": "index.js",
  "scripts": {
    "build": "run-p 'build:*'",
    "build:js": "rollup --config",
    "build:css": "set NODE_ENV=production && node node_modules/postcss-cli/index.js \"source/css/**/*.css\" --config postcss.config.js --base source/css --dir source/styles",
    "build:css:dev": "node node_modules/postcss-cli/index.js \"source/css/**/*.css\" --config postcss.config.js --base source/css --dir source/styles",
    "build:critical": "node scripts/extract-critical-css.js",
    "build:dev-theme": "node node_modules/postcss-cli/index.js \"source/css/foundation/*.css\" \"source/css/components/*.css\" \"source/css/layout/*.css\" \"source/css/utilities/*.css\" --config postcss.config.js --base source/css --dir source/styles",
    "copy:vendor": "cp -rf node_modules/reveal.js/plugin/notes source/vendor && git add source/vendor/notes",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:css": "node scripts/test-css-integration.js",
    "watch": "run-p 'watch:*'",
    "watch:js": "npm run build:js -- --watch",
    "watch:css": "npm run build:css:dev -- --watch --verbose --map",
    "watch:dev-theme": "npm run build:dev-theme -- --watch --verbose --map",
    "optimize": "npm run build && npm run build:critical && npm run build:dev-theme",
    "dev": "run-p 'watch:*'",
    "hexo:build": "npm run optimize && hexo generate",
    "hexo:dev": "npm run dev & hexo server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thom4parisot/hexo-theme.git"
  },
  "keywords": [
    "hexo"
  ],
  "author": "Thomas Parisot (https://thom4.net)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/thom4parisot/hexo-theme/issues"
  },
  "homepage": "https://github.com/thom4parisot/hexo-theme#readme",
  "browserslist": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90",
    "iOS >= 14",
    "Android >= 90",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "group-array": "^1.0.0",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-mark": "^3.0.1",
    "normalize.css": "^8.0.1",
    "reading-time": "^1.2.0",
    "reveal-random-colors": "^2.0.0",
    "reveal.js": "^4.3.0",
    "somebody": "^2.0.0",
    "postcss": "^8.4.44",
    "postcss-cli": "^11.0.1",
    "postcss-color-function": "^4.1.0",
    "postcss-extend-rule": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.3",
    "postcss-nesting": "^7.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-external-helpers": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^6.1.2",
    "ejs": "^3.1.5",
    "highlight.js": "^10.1.2",
    "npm-run-all": "^4.1.3",
    "rollup": "^2.26.5",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-browserify-transform": "^1.0.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-string": "^3.0.0"
  }
}